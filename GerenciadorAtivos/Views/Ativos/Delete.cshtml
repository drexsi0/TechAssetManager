@model GerenciadorAtivos.Models.Ativo

@{
    ViewData["Title"] = "Excluir";
}

<h1>Excluir Ativo</h1>

<h3 class="text-danger">Tem certeza que deseja excluir este item permanentemente?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Nome)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Nome)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Patrimonio)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Patrimonio)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Tipo)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Tipo)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Setor)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Setor)</dd>
    </dl>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirmar Exclusão" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancelar</a>
    </form>
</div>