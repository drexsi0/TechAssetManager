@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<GerenciadorAtivos.Models.Ativo>

@{
    ViewData["Title"] = "Inventário";

    // Lógica para manter os selects selecionados (igual fizemos antes)
    var statusList = Html.GetEnumSelectList<GerenciadorAtivos.Models.StatusAtivo>();
    var setorList = Html.GetEnumSelectList<GerenciadorAtivos.Models.SetorAtivo>();
    var tipoList = Html.GetEnumSelectList<GerenciadorAtivos.Models.TipoAtivo>();

    if (ViewData["StatusFilter"] != null)
    {
        var val = Convert.ToInt32(ViewData["StatusFilter"]).ToString();
        var selected = statusList.FirstOrDefault(x => x.Value == val);
        if (selected != null) { selected.Selected = true; }
    }
    if (ViewData["SetorFilter"] != null)
    {
        var val = Convert.ToInt32(ViewData["SetorFilter"]).ToString();
        var selected = setorList.FirstOrDefault(x => x.Value == val);
        if (selected != null) { selected.Selected = true; }
    }
    if (ViewData["TipoFilter"] != null)
    {
        var val = Convert.ToInt32(ViewData["TipoFilter"]).ToString();
        var selected = tipoList.FirstOrDefault(x => x.Value == val);
        if (selected != null) { selected.Selected = true; }
    }
}

<h1>Inventário de Ativos</h1>

<div class="card mb-4 shadow-sm">
    <div class="card-body">
        <form asp-action="Index" method="get">
            <div class="row g-3">
                <div class="col-md-5">
                    <div class="input-group">
                        <input type="text" name="searchString" class="form-control" placeholder="Nome ou Patrimônio..." value="@ViewData["CurrentFilter"]">
                        <button type="submit" class="btn btn-primary">Buscar</button>

                        @if (ViewData["CurrentFilter"] != null || ViewData["StatusFilter"] != null || ViewData["SetorFilter"] != null || ViewData["TipoFilter"] != null)
                        {
                            <a asp-action="Index" class="btn btn-outline-secondary" title="Limpar Filtros">
                                <i class="bi bi-x-lg"></i> Limpar
                            </a>
                        }
                    </div>
                </div>

                <div class="col-md-7 text-end">
                    <button class="btn btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#filtrosAvancados" aria-expanded="false">
                        <i class="bi bi-funnel"></i> Filtros Avançados ▼
                    </button>
                    @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Create" class="btn btn-success ms-2"> Novo Ativo</a>
                        }
                    </div>
            </div>

            <div class="collapse mt-3 @((ViewData["StatusFilter"] != null || ViewData["SetorFilter"] != null || ViewData["TipoFilter"] != null) ? "show" : "")" id="filtrosAvancados">
                <div class="card card-body bg-light">
                    <div class="row">
                        <div class="col-md-3">
                            <label class="form-label">Status</label>
                            <select name="statusFilter" class="form-select" asp-items="statusList">
                                <option value="">Todos</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Setor</label>
                            <select name="setorFilter" class="form-select" asp-items="setorList">
                                <option value="">Todos</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Tipo</label>
                            <select name="tipoFilter" class="form-select" asp-items="tipoList">
                                <option value="">Todos</option>
                            </select>
                        </div>
                        <div class="col-md-3 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100">Aplicar Filtros</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<table class="table table-hover table-striped">
    <thead class="thead-azul">
        <tr>
            <th>Nome</th>
            <th>Patrimônio</th>
            <th>Tipo</th>
            <th>Setor</th>
            <th>Status</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="fw-bold">@Html.DisplayFor(modelItem => item.Nome)</td>
                <td><code>@Html.DisplayFor(modelItem => item.Patrimonio)</code></td>
                <td>@Html.DisplayFor(modelItem => item.Tipo)</td>
                <td>
                    @{
                        // Busca o TEXTO do Enum comparando com o VALOR (ID) salvo no banco
                        var setorTexto = Html.GetEnumSelectList<GerenciadorAtivos.Models.SetorAtivo>()
                        .FirstOrDefault(x => x.Value == item.Setor)?.Text ?? item.Setor;
                    }
                    @setorTexto
                </td>
                <td>
                    @{
                        string corBadge = "bg-secondary";
                        if (item.Status == GerenciadorAtivos.Models.StatusAtivo.Disponivel) { corBadge = "bg-success"; }
                        else if (item.Status == GerenciadorAtivos.Models.StatusAtivo.EmUso) { corBadge = "bg-primary"; }
                        else if (item.Status == GerenciadorAtivos.Models.StatusAtivo.Manutencao) { corBadge = "bg-warning text-dark"; }
                        else if (item.Status == GerenciadorAtivos.Models.StatusAtivo.Descartado) { corBadge = "bg-danger"; }
                    }
                    <span class="badge @corBadge">@Html.DisplayFor(modelItem => item.Status)</span>
                </td>
                <td>
                    <div class="btn-group btn-group-sm">
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary">Editar</a>
                        }
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Ver</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Excluir</a>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-center align-items-center mt-4 gap-3">
    @{
        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    }
    <a asp-action="Index"
       asp-route-pageNumber="@(Model.PageNumber - 1)"
       asp-route-searchString="@ViewData["CurrentFilter"]"
       asp-route-statusFilter="@ViewData["StatusFilter"]"
       asp-route-setorFilter="@ViewData["SetorFilter"]"
       asp-route-tipoFilter="@ViewData["TipoFilter"]"
       class="btn btn-outline-primary @prevDisabled">
        &laquo; Anterior
    </a>
    <span class="fw-bold text-muted">Página @Model.PageNumber de @Model.PageCount</span>
    <a asp-action="Index"
       asp-route-pageNumber="@(Model.PageNumber + 1)"
       asp-route-searchString="@ViewData["CurrentFilter"]"
       asp-route-statusFilter="@ViewData["StatusFilter"]"
       asp-route-setorFilter="@ViewData["SetorFilter"]"
       asp-route-tipoFilter="@ViewData["TipoFilter"]"
       class="btn btn-outline-primary @nextDisabled">
        Próximo &raquo;
    </a>
</div>