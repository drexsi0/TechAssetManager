@model IEnumerable<GerenciadorAtivos.Models.Ativo>

@{
    ViewData["Title"] = "Listagem de Ativos";
}

<h1>Inventário de TI</h1>

<p class="mt-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary me-2">
        <i class="fa fa-home"></i> Início
    </a>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fa fa-plus"></i> Novo Ativo
    </a>
</p>

<table class="table table-hover table-striped mt-4">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Patrimonio)</th>
            <th>@Html.DisplayNameFor(model => model.Tipo)</th>
            <th>@Html.DisplayNameFor(model => model.Setor)</th>
            <th>Status</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="fw-bold">@Html.DisplayFor(modelItem => item.Nome)</td>
                <td><code>@Html.DisplayFor(modelItem => item.Patrimonio)</code></td>
                <td>@Html.DisplayFor(modelItem => item.Tipo)</td>
                <td>@Html.DisplayFor(modelItem => item.Setor)</td>
                <td>
                    @{
                        string corBadge = "bg-secondary";
                        if (item.Status == GerenciadorAtivos.Models.StatusAtivo.Disponivel) { corBadge = "bg-success"; }
                        else if (item.Status == GerenciadorAtivos.Models.StatusAtivo.EmUso) { corBadge = "bg-primary"; }
                        else if (item.Status == GerenciadorAtivos.Models.StatusAtivo.Manutencao) { corBadge = "bg-warning text-dark"; }
                        else if (item.Status == GerenciadorAtivos.Models.StatusAtivo.Descartado) { corBadge = "bg-danger"; }
                    }
                    <span class="badge @corBadge">@Html.DisplayFor(modelItem => item.Status)</span>
                </td>
                <td>
                    <div class="btn-group btn-group-sm">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Ver</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Excluir</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>